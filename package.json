{
    "name": "floni",
    "version": "1.0.0",
    "description": "Floni Website",
    "main": "index.js",
    "scripts": {
        "build:scss": "node-sass src/scss/main.scss  -o dist/css",
        "build:typescript": "tsc -p ./",
        "watch:scss": "node-sass -w src/scss/main.scss -o dist/css",
        "watch:typescript": "tsc -p ./ -w",
        "watch": "concurrently \"npm run watch:scss\" \"npm run watch:typescript\"",
        "build": "concurrently \"npm run build:scss\" \"npm run build:typescript\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ValentinHLica/floni.git"
    },
    "author": "Valentin Lica",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ValentinHLica/floni/issues"
    },
    "homepage": "https://github.com/ValentinHLica/floni#readme",
    "devDependencies": {
        "concurrently": "^5.3.0",
        "node-sass": "^5.0.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.5"
    }
}
